<!DOCTYPE html>
<html lang='en'>
<head>
	<meta charset='UTF-8'>
	<meta name='viewport' content='width=device-width, initial-scale=1.0'>
	<meta http-equiv="X-UA-Compatible" content="ie=edge">
	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB" crossorigin="anonymous">
	<style>
		img{
			width: 100%;
		}
	</style>
	<title>9T Uploader</title>
</head>
<body>
	<div class='container'>
		<div class='row'>
			<div class='col-md-6 m-auto'>
				<h1 class='text-center display-4 my-4'>Mongo File Uploads</h1>
				<form action='/upload' method="POST" value='' enctype='multipart/form-data'>
						<div class='custom-file mb-3'>
							<input type='file' name='file' id='file' value='' class='custom-file-input'>
							<label for='file' class='custom-file-label'>Choose file</label>
						
							<select id='categoryPicker' name='category' class='custom-select'>
							<option selected>Pick a category!</option>
							<option value='chapter1'>Chapter 1</option>
							<option value='chapter2'>Chapter 2</option>
							<option value='guestArtAndWriting'>Guest Art + Writing</option>
							<option value='anneClipArt'>Anne Clip Art</option>
						</select>

						</div>

						

						<input type='submit' value='Submit' class='btn btn-primary btn-block'>
					</form>
					<hr>
					<% if(files){ %>
						<% files.forEach(function(file) { %>
							<div class="card.card-body.mb-3">
								<% if(file.isImage) { %>
									<img src='image/<%=file.filename%>' alt=''>

								<%} else { %>
									<%= file.filename %>
								<% } %>
							</div>	
						<% }) %>
					<%} else { %>
						<p>No files to show</p>
					<% } %>
			</div>
		</div>
	</div>
	<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
	<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js" integrity="sha384-smHYKdLADwkXOn1EmN1qk/HfnUcbVRZyYmZ4qpPea6sjB/pTJ0euyQp0Mk8ck+5T" crossorigin="anonymous"></script>

	<script>
	let category;
		$(document).ready(()=>{
			
			$('#categoryPicker').change((e)=>{
			e.preventDefault();
			// console.log(e.target.value);
			category = e.target.value;
			});
		});

		

		$(document).on('submit', 'form', function(event) {
				// event.preventDefault();
				console.log('awww yeah');
				console.log(category);
				$('form', 'input').attr('value', category);
			});
		
	


	</script>
</body>
</html>